.devise-alert {
    position: absolute;
    top: 0px;
    width: 100%;
}

#badger {
    margin:0px auto;
    display:block;
    width:491px;
    height: 604px;
    background: url('<%= asset_path("badge.png") %>');
    position: relative;
}

#badger #filling {
    display: block;

    position: absolute;
    bottom: 10px;
    left: 20px;
    width: 453px;
    height: 230px;
}

#badger #filling .right {
    display: block;

    position: absolute;
    right: 8px;
    width: 220px;
    height: 230px;
}

#badger #filling .right form {
    padding-top: 10px;
}

#badger #filling .right form label {
    text-transform: uppercase;
    color: #555;
}

#badger #filling .right form label.checkbox {
    padding-top: 0px;
}

#badger #filling .right form .control-group {
    margin-bottom: 0px;
}

#badger #filling .right form .checkbox {
    padding-left: 4px;
}

#badger #filling .right form .form-actions {
    padding: 0px;
    border-top: 0px;
    margin-top: 12px;
    background: none;
    text-align: center;
}

#badger #devise_links {
    position: absolute;
    bottom: -50px;
    left: 4px;
}