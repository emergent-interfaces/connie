.page-header
  %h1
    = @user.username ? @user.username : "User #{@user.id}"
    = render :partial => 'shared/model_tools', :locals => {model: @user, name: @user.username}

.row-fluid
  .span8
    %h2 Details
    = "Username: #{@user.username}"

  .span4
    %h2 Profile
    - if @user.profile
      = "#{link_to @user.profile.name, @user.profile}".html_safe
    - else
      .alert
        No profile is assigned to your user.
        A profile must be assigned to have full access to your conventions.
      .btn-group
        =link_to "<i class='icon-magnet'></i> Link Existing Profile".html_safe, edit_user_path(@user), :class => 'btn'
        =link_to "<i class='icon-plus'></i> Create New Profile".html_safe, new_user_profile_path(@user), :class => 'btn'
