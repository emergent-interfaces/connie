%h1#profile_name
  = @profile.name
  .model_tools
    = link_to image_tag("icons/pencil.png"), edit_profile_path(@profile)
    = link_to image_tag("icons/cross.png"), @profile, :method => :delete, :confirm => "Are you sure you want to delete #{@profile.name}?"

.section
  %h2 Phone Numbers
  = table(@profile.phones,["Type", "Number",""]) do |phone,klass|
    %tr(class=klass)
      %td= phone.phone_type
      %td= phone.number
      %td
        = link_to image_tag('icons/pencil.png'), edit_profile_phone_path(@profile,phone)
        = link_to image_tag('icons/cross.png'), [@profile,phone], :method => :delete
  = link_to image_tag('icons/add.png')+"New Phone Number", new_profile_phone_path(@profile), {class:'button_link'}