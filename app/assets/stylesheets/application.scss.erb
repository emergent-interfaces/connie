body {
    padding: 0px;
    margin: 0px;
    width: 100%;
    height: 100%;
    position: relative;

    background: url(<%= asset_path "faux_column.png" %>) repeat-y;
}

#left-sidebar {
    position: absolute;
    top: 0px;
    left: 0px;
    width: 180px;
    bottom: 0px;

    padding: 10px;
    background: #e4e7f2;
}

#main {
    margin-left: 200px;
    padding: 1em;
}

#user {
    height: 100px;
}

h1 {
    font-size: 1.4em;
    padding-bottom: 1em;
}

h2 {
    font-size: 1.2em;
    padding: 0.2em 0em;
    margin-bottom: 0.2em;
    border-bottom: 1px solid #D0D0D0;
}

.section {
    padding-bottom: 1em;
}

.actions {
    float: right;
}

ul.main_nav a, ul.main_nav a:visited {
    text-decoration: none;
    font-size: 18px;
    font-family: sans-serif;

    color: #bcc4de;
    text-shadow: 0px 2px 3px #ffffff;
}

ul.main_nav a:hover, ul.main_nav a:active {
    color: #6073b1;
    text-shadow: 0px 2px 3px #ffffff;
}

ul.main_nav li {
    padding: 8px 0px;
}

.bar {
    display: block;
    height: 2px;
    width: 180px;
    background: url(<%= asset_path "hbar.png" %>) no-repeat;
}

input.search {
    width: 180px;
    font-size: 18px;
    border: 1px solid #bdc4e0;
    margin-bottom: 8px;
}