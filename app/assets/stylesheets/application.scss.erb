body {
    padding: 0px;
    margin: 0px;
    width: 100%;
    height: 100%;
    position: relative;
    font-family: sans-serif;

    background: url(<%= asset_path "faux_column.png" %>) repeat-y;
}

#left-sidebar {
    position: absolute;
    top: 0px;
    left: 0px;
    width: 180px;
    bottom: 0px;

    padding: 10px;
}

#main {
    margin-left: 202px;
    padding: 1em;
}

#user {
    padding-bottom: 1em;
}

#user .status {
    font-size: 0.8em;
}

h1 {
    font-size: 1.4em;
    padding-bottom: 1em;
}

h1 input {
    width: 100%;
    font-size: 1em;
    border: 0px;
}

h2 {
    font-size: 1.2em;
    padding: 0.2em 0em;
    margin-bottom: 0.2em;
    border-bottom: 1px solid #D0D0D0;
}

.section {
    padding-bottom: 1em;
}

.model_tools {
    float: right;
}

ul.main_nav a, ul.main_nav a:visited {
    text-decoration: none;
    font-size: 18px;
    font-family: sans-serif;

    color: #bcc4de;
    text-shadow: 0px 2px 3px #ffffff;
}

ul.main_nav a:hover, ul.main_nav a:active {
    color: #6073b1;
    text-shadow: 0px 2px 3px #ffffff;
}

ul.main_nav li {
    padding: 8px 0px;
}

.bar {
    display: block;
    height: 2px;
    width: 180px;
    background: url(<%= asset_path "hbar.png" %>) no-repeat;
}

input.search {
    width: 180px;
    font-size: 18px;
    border: 1px solid #bdc4e0;
    margin-bottom: 8px;
}

.best_in_place .nil {
    color: gray;
    font-size: 0.8em;
    font-style: italic;
}

.best_in_place_highlight {
    background: #E0E5FF;
}

.subtle {
    color: #909090;
    font-size: 0.9em;
}

/* Button Links */
a.button_link, a.button_link:visited {
    display: block;
    float: left;
    font-size: 0.9em;

    text-decoration: none;
    background: #F0F2F8 url('white_1px.png') repeat-x top;
    border: 1px solid #E0E5EF;
    border-bottom: 1px solid #D0D5DF;
    padding: 3px 10px 4px 10px;

    border-radius: 2px;

    color: #505050;
    text-shadow: 0px 1px 0px #ffffff;
}

a.button_link:hover, a.button_link:active {
    background: #F6F8FE url('white_1px.png') repeat-x top;
    border: 1px solid #D5E0E8;
    border-top: 1px solid #E5F0FF;
    color: #707070;
}

.button_link img {
    position: relative;
    top: 2px;
    padding-right: 4px;
}