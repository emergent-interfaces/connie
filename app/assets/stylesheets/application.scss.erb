body {
    padding: 0px;
    margin: 0px;
}

#content {
    padding: 0px 10px;
}

div#header {
    background: #333333;
    height: 32px;
}

#con_filter select {
    background: #333333;
    color: #acacac;
    border: none;
}

div.divider {
    width: 4px;
    height: 30px;
    float: left;
    margin-left: 4px;
    background: url('<%= asset_path 'divider.png' %>') no-repeat;
}

h1 {
    font-size: 1.4em;
    padding: 1em 0em;
}