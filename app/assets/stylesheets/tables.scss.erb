table {
    width: 100%
}

thead tr td {
    font-size: 1.2em;
    border-bottom: 2px solid #80A0D0;
    margin-bottom: 12px;
}

tbody tr {
    border-bottom: 1px dotted #80A0D0;
}

td {
    padding: 6px;
    font-size: 0.8em;
}

td a, td:visited {
    text-decoration: none;
    color: #6090C0;
}

td a:hover, td:active {
    color: #3060A0;
}

tr.even {
    background: white;
}

tr.odd {
    background: #F8FAFF;
}