- text_only ||= false

%span.inline_time_span
  = condensed_time_span(time_span)
  - if time_span.confidence < 2
    = " (#{confidence_string_for(time_span.confidence)})"

  - unless text_only
    = link_to edit_link_text("Shift"), edit_event_time_span_path(event)
    = link_to delete_link_text("Clear"), event_time_span_path(event), :method=>:delete, :confirm=>"Are you sure?"